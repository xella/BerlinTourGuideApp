<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.xella.berlintourguideapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SightsFragment"
            android:label="@string/places_sights" />
        <activity
            android:name=".MuseumsFragment"
            android:label="@string/places_museums" />
        <activity
            android:name=".ParksFragment"
            android:label="@string/places_parks" />
        <activity
            android:name=".FoodFragment"
            android:label="@string/places_food" />
    </application>

</manifest>